---
layout: default
blog: true
---

{% for post in site.posts %}
%article.post{:class => 'color{{post.color}}'}
	%h2.post_title
		%a{:href => '{{ post.url }}'} {{ post.title }}
		%span.detail
			by {{ post.author }} and wrote
			%span{:title => '{{ post.date | date_to_rfc822 }}'}
				{{ post.date | date_to_long_string }}
{% endfor %}
